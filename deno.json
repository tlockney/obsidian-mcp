{
  "version": "0.2.0",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run --watch main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "build-mac": "deno compile --allow-net --allow-env --allow-read --allow-write --allow-run --target aarch64-apple-darwin --output ./build/obsidian-mcp-mac --no-check main.ts",
    "build-linux-x86_64": "deno compile --allow-net --allow-env --allow-read --allow-write --allow-run --target x86_64-unknown-linux-gnu --output ./build/obsidian-mcp-linux-x86_64 --no-check main.ts",
    "build-linux-ARM64": "deno compile --allow-net --allow-env --allow-read --allow-write --allow-run --target aarch64-unknown-linux-gnu --output ./build/obsidian-mcp-linux-ARM64 --no-check main.ts",
    "build-windows-x86_64": "deno compile --allow-net --allow-env --allow-read --allow-write --allow-run --target x86_64-pc-windows-msvc --output ./build/obsidian-mcp-windows-x86_64 --no-check main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@1",
    "@std/encoding": "jsr:@std/encoding@1",
    "@std/dotenv": "jsr:@std/dotenv@0.225.3",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@latest",
    "zod": "npm:zod@3.24.1"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"],
    "jsx": "react"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
